{
  "manifest_version": 2.0,
  "id": "ia_chatbot",
  "type": "module",
  "namespace": "IaChatbot",
  "name": "IA Chatbot",
  "version": "1.1",
  "author": "Simon Rodriguez",
  "description": "Chatbot con IA en pantalla completa",
  "actions": {
    "chat":         { "class": "ChatAction",            "view": "chat.view" },
    "chat_message": { "class": "ChatMessageAction",     "layout": "layout.json" }
  },
  "assets": {
    "js": ["lib/marked.min.js", "chat.js"],
    "css": ["chat.css", "markdown.css"]
  }
}